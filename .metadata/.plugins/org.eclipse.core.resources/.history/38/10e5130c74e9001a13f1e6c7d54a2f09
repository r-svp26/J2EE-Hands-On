package org.resultset.in;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.Scanner;

public class SpecificDataAccess {

	public static void main(String[] args) {

		Connection conn = null;
		PreparedStatement ptmt = null;
		ResultSet rs = null;

		String qry = "SELECT * FROM STUDENT WHERE NAME=?";
		Scanner sc = new Scanner(System.in);
		System.out.println("ENETR THE STUDENT ID?");
		int ids = sc.nextInt();

		try {
			Class.forName("com.mysql.jdbc.Driver");
			System.out.println("Driver registered and loaded");

			conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/servlet?user=root&password=admin");
			System.out.println("Connection Established");

			ptmt = conn.prepareStatement(qry);
			System.out.println("Platform Created!");

			ptmt.setInt(1, ids);

			/* EXECUTE THE SQL QUERY */
			rs = ptmt.executeQuery();

			if (rs.next()) {
				String name = rs.getString(2);
				String loc = rs.getString(3);
				System.out.println(name + " " + loc);
			} else
				System.out.println("Sorry! Data not found");

		} catch (ClassNotFoundException | SQLException e) {
			e.printStackTrace();
		} finally {
			if (conn != null)
				try {
					conn.close();
				} catch (SQLException e) {
					e.printStackTrace();
				}
			if (ptmt != null)
				try {
					ptmt.close();
				} catch (SQLException e) {
					e.printStackTrace();
				}
			if (rs != null)
				try {
					rs.close();
				} catch (SQLException e) {
					e.printStackTrace();
				}
			//sc.close();
		}
	}
}
